@model IEnumerable<Tp1_AspNet.Presentation.Models.ContatoViewModel>

@{
    ViewBag.Title = "Lista Com Telefone";
}

<h2>ListaComTelefone</h2>

<p>
    @Html.ActionLink("Lista Com Emails", "Index")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sobrenome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Selecionado)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sobrenome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telefone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Selecionado)
        </td>
        <td>
            @Html.ActionLink("Selecionar", "Seleciona", new { nome = item.Nome, actionqueestava = "ListaComTelefone" }) 
        </td>
    </tr>
}

</table>

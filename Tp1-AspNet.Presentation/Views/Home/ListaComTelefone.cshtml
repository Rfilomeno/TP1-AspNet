@model IEnumerable<Tp1_AspNet.Presentation.Models.ContatoViewModel>

@{
    ViewBag.Title = "ListaComTelefone";
}

<h2>Lista Com Telefones</h2>

<p>
    @Html.ActionLink("Lista Com E-mails", "Index")
</p>
<table class="table">
    <tr>
        <th>
            <span>Selecionar</span>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sobrenome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefone)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <input type="checkbox" name="Selecionado" value="false" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sobrenome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telefone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        
    </tr>
}

</table>
